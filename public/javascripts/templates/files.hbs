<nav class="top-bar">
  <img src="https://p.sfx.ms/images/SkyDriveLogoLight.png" />
  <ul class="right">
    <li><label>{{gravatar-image email=currentUser.email s="30"}} {{currentUser.name}}</label></li>
  </ul>
</nav>

{{#if authRedirectUrl}}

  <p>You must first log into your Sky Drive account.</p>
  <button {{action "openAuthPopup"}}>Login</button>

{{else}}

  <ul class="breadcrumbs">
    <li><a href="#">Home</a></li>
    <li><a href="#">Features</a></li>
    <li class="current">{{name}}</li>
  </ul>

  <i class="icon-doc">asdf</i>

  <div class="large-12 columns">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Type</th>
          <th>Name</th>
          <th>Size (Kb)</th>
        </tr>
      </thead>
      <tbody>
        {{#each folders}}
          <tr>
            <td></td>
            <td>[icon]</td>
            <td colspan="2">{{name}}</td>
          </tr>
        {{/each}}
        {{#each files}}
          <tr>
            <td></td>
            <td>[icon]</td>
            <td>{{name}}</td>
            <td>{{size}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  
{{/if}}